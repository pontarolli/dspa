@article{Song2006,
   abstract = {For standard industrial process control systems, blocks in a control loop are executed periodically. That is, the sampling data is fed to control blocks by sensors at a fixed rate. At the same rate, control blocks do some calculations on the inputs and send out commands to actuators. This paradigm works well with reliable wireline networks, such as Fieldbus and ProfiBus. However, it is a justified assumption that part of the wired networks will be replaced by wireless networks. With wireless networks, we shall expect intermittent communication losses. In this paper, we first identify the poor dynamic response of the standard PID algorithms in the case of lost communications. An enhanced PID algorithm is proposed to improve the dynamic response under these conditions. When there is no communication loss, the enhanced PID block acts exactly the same as a standard PID block. Lost data is compensated by the integral component in the enhanced PID block. When communications are reestablished, the derivative component in the enhanced PID block eliminates possible spikes in the output. We evaluate the enhanced PID algorithm under several wireless scenarios. The results demonstrate the advantages of the enhanced PID algorithm. Copyright 2006 by ISA.},
   author = {Jianping Song and Aloysius K. Mok and Deji Chen and Mark Nixon and Terry Blevins and Willy Wojsznis},
   issue = {October 2006},
   journal = {Isa Expo 2006},
   keywords = {Distributed control system - DCS,PID algorithm,Unreliable communication,Wireless communications},
   pages = {105-116},
   title = {Improving PID control with unreliable communications},
   volume = {2006},
   year = {2006},
}
